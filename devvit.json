{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "snoo-clues",
  "marketingAssets": {
    "icon": "assets/logo.png"
  },
  "media": {
    "dir": "assets"
  },
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html",
        "splash": {
          "backgroundColor": "#fdf5e6",
          "appIconUri": "logo.png",
          "appDisplayName": "Snoo-Clues"
        }
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "snoo-clues",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "dev": {
    "subreddit": "snoo_clues_dev"
  }
}